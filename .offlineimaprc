[general]

metadata = ~/.offlineimap
accounts = gmail,gmx
maxsyncaccounts = 1
ui = TTYUI
ignore-readonly = no

[mbnames]

enabled = yes
filename = ~/.mutt/muttrc.mailboxes
header = "mailboxes "
peritem = "+%(foldername)s"
sep = " "
footer = "\n"

[Account gmail]

